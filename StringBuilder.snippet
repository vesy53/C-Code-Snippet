<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>String Builder</Title>
			<Shortcut>sb</Shortcut>
			<Description>Code snippet for Creating New String Builder</Description>
			<Author>Microsoft Corporation</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>name</ID>
					<ToolTip>Name</ToolTip>
					<Default>builder</Default>
				</Literal>
        <Literal>
          <ID>holder</ID>
          <ToolTip>Place Holder</ToolTip>
          <Default>$</Default>
        </Literal>
			</Declarations>
			<Code Language="csharp">
        <![CDATA[ StringBuilder $name$ = new StringBuilder();
      
      $name$.AppendLine($holder$"$text$");
      
      return $name$.ToString().TrimEnd();$end$]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>